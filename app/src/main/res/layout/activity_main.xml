<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MyActivity"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#f3f4f6"
    android:weightSum="1"
    android:gravity="center">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:textColor="#7e899b"
        android:id="@+id/prompt"
        android:layout_height="wrap_content"
        android:text="Enter message below:"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:layout_weight="0.24"
        android:textColor="#5d6572"
        android:minHeight="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />
    <Button
        android:layout_marginTop="32dp"
        android:text="Insert Recipient Name"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/insertRecipient"
        android:background="@drawable/custom_btn"
        android:onClick="insertRecipientName"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_btn2"
        android:textColor="#FFF"
        android:textSize="16dp"
        android:text="Begin!"
        android:id="@+id/beginButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"
        android:onClick="userClicked"/>

</LinearLayout>