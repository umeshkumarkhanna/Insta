<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ca.umeshkhanna.insta.ConfirmationActivity">

    <TextView
        android:text="Preview message:"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="30dp" />
    <TextView
        android:layout_width="fill_parent"
        android:minHeight="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/message_preview"
        android:background="#E3E3E3"
        android:text="message"/>
    <TextView
        android:text="Sending to:"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp" />
    <TextView
        android:layout_width="fill_parent"
        android:minHeight="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/recipients_preview"
        android:background="#E3E3E3"
        android:text="recipients"/>
    <Button
        android:layout_marginTop="48dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/send"
        android:onClick="confirmSendMessage"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
